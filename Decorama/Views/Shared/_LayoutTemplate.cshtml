@using  Decorama.Models
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Decorama</title>

    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
        <link href="~/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Raleway:400,400i,500,600,700%7CPlayfair+Display:400i,700,700i" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet" />

    @*@Styles.Render("~/Content/vendor")
    @Scripts.Render("~/bundles/modernizr")*@
</head>

<body id="page-top" class="index">
    <!-- Header -->
    <header>
        <nav id="mainNav" class="navbar navbar-default navbar-custom navbar-fixed-top">
            <div class="container">
                <div class="navbar-header page-scroll">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <i class="fa fa-bars"></i>
                    </button>
                    <a class="navbar-brand navbar-brand2 page-scroll" href="#page-top">
                        <img class="img-responsive img-centered" src="~/img/Decorama2.png" />
                        @*<img class="img-responsive img-centered" src="~/img/logo1.png" alt="Logo">*@
                    </a>
                </div>
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <div>
                        <ul class="nav navbar-nav">
                            <li class="hidden">
                                <a href="#page-top"></a>
                            </li>
                            <li>
                                <a class="page-scroll" href="#blog">Inicio</a>
                            </li>
                            <li>
                                <a class="page-scroll" href="#about">Nosotros</a>
                            </li>
                            <li>
                                <a class="page-scroll" href="#team">Equipo</a>
                            </li>
                            <li class="logo">
                                <a class="navbar-brand page-scroll" href="#page-top">
                                    <img class="img-responsive img-centered" src="~/img/Decorama4.png" />
                                    @*<img class="img-responsive img-centered" src="~/img/logo1.png" alt="">*@
                                </a>
                            </li>
                            <li>
                                <a class="page-scroll" href="#services">Servicios</a>
                            </li>
                            <li>
                                <a class="page-scroll" href="#portfolio">Portafolio</a>
                            </li>
                            <li>
                                <a class="page-scroll" href="#contact">Contacto</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>

        <div id="myCarousel" class="carousel slide carousel-fade" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                @for (int i = 0; i < SessionH.Imagenes.Where(x => x.Tipo == "Slider").Count(); i++)
                {
                    <li data-target="#myCarousel" data-slide-to="@i" @(i==0 ? " class='active'" : "")></li>
                }
            </ol>
            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                @for (int i = 0; i < SessionH.Imagenes.Where(x => x.Tipo == "Slider").Count(); i++)
                {
                    <div class="item@((i==0 ? " active" : ""))" style="background: url(../img/@(SessionH.Imagenes[i].Ruta)) no-repeat center top; filter: blur(5px)"></div>
                }
                @*<div class="item carusel1"></div>
        <div class="item carusel2"></div>
        <div class="item carusel3"></div>
        <div class="item carusel4"></div>*@
                @*<div class="item carusel3"></div>*@
            </div>
        </div>
    </header>

   @RenderBody()

    <!-- jQuery -->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/vendor/imagesloaded.pkgd.min.js"></script>
    <script src="~/vendor/masonry.pkgd.min.js"></script>
    <script src="~/vendor/jquery/jquery.easing.min.js"></script>
    <script src="~/vendor/jquery/jquery.viewportchecker.js"></script>

    <script src="~/js/jquery.bcSwipe.min.js"></script>
    <!-- Contact Form JavaScript -->
    <script src="~/js/jqBootstrapValidation.js"></script>
    <!-- Theme JavaScript -->
    <script src="~/js/main.js"></script>
</body>
</html>
